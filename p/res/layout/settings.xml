		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="@color/offWhite"
			android:textStyle="bold" android:text="@string/subtitle"
			 android:paddingLeft="4dip"
			android:background="@color/darkGray" />
		
		<TableRow android:id="@+id/tblrowshowsubtitles" 
		android:padding="4dip">
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingLeft="8dip"
			
				android:layout_width="fill_parent">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="18sp"
					android:textColor="@color/white" android:textStyle="bold"
					android:text="@string/showsubtitles" />
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:singleLine="false"
					android:paddingTop="3dip" android:textColor="@color/offWhite"
					android:text="@string/showsubtitlesifexists" />
			</LinearLayout>
			<CheckBox android:id="@+id/setting_subtitlehide_box"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_gravity="right" android:paddingRight="7dp" android:padding="3dp"
				android:checked="false" />
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="3dip"
			android:background="@color/darkGray" />

		<TableRow android:id="@+id/tblrowsubtitlesize"
