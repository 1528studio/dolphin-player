			</LinearLayout>
			<ImageButton android:id="@+id/setting_sort_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_gravity="right" android:background="#ff000000"
				android:paddingRight="7dp" android:padding="3dp"
				android:src="@drawable/more" />
		</TableRow>
