			android:paddingLeft="4dip"
			android:background="@color/darkGray" />
		<View android:layout_width="fill_parent" android:layout_height="5dip"
			android:background="@color/black" />

		<TableRow android:id="@+id/tblrowloopvideo"
		android:padding="4dip">
			<LinearLayout android:orientation="vertical"
			android:paddingLeft="8dip"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="18sp"
					android:textColor="@color/white" android:textStyle="bold"
					android:text="@string/loopvideo" />
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:singleLine="false"
					android:paddingTop="3dip" android:textColor="@color/offWhite"
					android:text="@string/choosehowtoloopplayvideofiles" />
				<TextView android:id="@+id/videoloopSelected"
					android:textStyle="italic" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:singleLine="false"
					android:paddingTop="3dip" android:textColor="@color/lightGray" />
			</LinearLayout>
			<ImageButton android:id="@+id/setting_videoloop_button"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_gravity="right" android:background="#ff000000" 
				android:paddingRight="7dp" android:padding="3dp"  
				android:src="@drawable/more" />
		</TableRow>
